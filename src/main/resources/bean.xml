<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="gameRunner" class="com.example.game.GameRunner" init-method="init" destroy-method="destroy">
        <constructor-arg ref="mario"/>
    </bean>
    <bean id="contra" class="com.example.game.Contra">
        <constructor-arg value="Contra" type="String"/>
        <constructor-arg value="Unity Games" type="String"/>
        <constructor-arg value="licensed" type="String" />
        <property name="users">
            <map>
                <entry key="1" value="alice"/>
                <entry key="2" value="jhon" />
                <entry key="3" value="bob" />
            </map>
        </property>
    </bean>
    <bean id="mario" class="com.example.game.Mario">
        <constructor-arg value="Mario" type="String"/>
        <constructor-arg value="Unity Games" type="String"/>
        <property name="users">
            <map>
                <entry key="1" value="alice"/>
                <entry key="2" value="jhon" />
                <entry key="3" value="bob" />
            </map>
        </property>
    </bean>
    <bean id="snowball" class="com.example.game.Snowball">
        <constructor-arg value="Snowball" type="String"/>
        <constructor-arg value="Tencent Games" type="String"/>
        <constructor-arg value="licensed" type="String" />
        <property name="users">
            <map>
                <entry key="1" value="alice"/>
                <entry key="2" value="jhon" />
                <entry key="3" value="bob" />
            </map>
        </property>
    </bean>

<!--    <bean id="temp" class="com.example.game.Temp" />-->
</beans>